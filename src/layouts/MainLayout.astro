---
// component import
import MainHead from "./MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

// style import
import "../styles/global.css";

const {
  title = "My Blog",
  description = "Welcome to my blog, where I share insights on life, dive into new frameworks, and explore the latest technologies.",
  image,
  data,
  robots,
} = Astro.props;
---

<html lang="en">
  <MainHead {title} {description} {image} {data} {robots} />
  <body>
    <Nav />
    <slot> Default Text</slot>
    <Footer />
  </body>
</html>