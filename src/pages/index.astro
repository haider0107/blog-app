---
// component imports
import MainLayout from "../layouts/MainLayout.astro";
import PostCard from "../components/PostCard.astro";
import Link from "../components/Link.astro";

// utils imports
import { formatBlogPosts } from "../js/utils";
import { getCollection } from "astro:content";

const allPosts = await getCollection('blog');

const formattedPosts = formatBlogPosts(allPosts, {
  limit: 3,
});

---

<MainLayout title="My Blog">
  <section class="container about" aria-label="About Me">
    <img
      src="/images/headshot.jpeg"
      alt="My headshot"
      width="200"
      height="330"
    />
    <div class="content">
      <h1 class="h1">My Blog</h1>
      <p>
        Welcome to my blog, where I share insights on life, dive into new frameworks, 
        and explore the latest technologies. Join me on this journey of learning, growth, and discovery!
      </p>
      <Link href="/about/" style="secondary" text="ðŸ‘‹ About Me" />
    </div>
  </section>
  <section class="container" aria-label="New Blog Posts">
    <h2 class="h1">New Blog Posts</h2>
    <div class="post-container">
      {
        formattedPosts.map((post) => (
          <PostCard
            data={post.data}
            url={`/blog/${post.id}`}
            tagType="h3"
          />
        ))
      }
    </div>
  </section>
</MainLayout>