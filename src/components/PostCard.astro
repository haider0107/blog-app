---

// component imports
import Link from "./Link.astro";

// utils imports
import { slugify, formatDate } from "../js/utils";
import { Image } from "astro:assets";

const { data, url, tagType } = Astro.props;

const Tag = tagType;

const { title, date, author, image, description, category } = data;
---

<article class="card">
  <a href={url} aria-hidden="true" tabindex="-1">
    <Image
      src={image.src}
      alt={image.alt}
      width={400} 
      height={250} 
      format="webp"
      class="responsive-landscape"
    />
  </a>
  <div class="content">
    <div>
      <Tag class="h3">
        <a href={url}>{title}</a>
      </Tag>
      <div class="margin">
        <a href={`/category/${slugify(category)}/`} class="badge">{category}</a>
      </div>
      <small>
        by <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {
          formatDate(date)
        }
      </small>
    </div>
    <p>{description}</p>
    <Link href={url} text="Read Post" style="secondary" />
  </div>
</article>