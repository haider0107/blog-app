---
import { slugify, formatDate } from "../js/utils";

const { relatedPosts } = Astro.props;

interface PostData {
  title: string;
  author: string;
  date: string; // or Date, depending on the format
}

interface Post {
  id: string;
  data: PostData;
}
---

{
  relatedPosts.map((post: Post) => (
    <div class="post">
      <h3 class="h4">
        <a href={`/blog/${post.id}/`}>{post.data.title}</a>
      </h3>
      <small>
        <a href={`/author/${slugify(post.data.author)}/`}>
          {post.data.author}
        </a>{" "}
        â€¢ {formatDate(post.data.date)}
      </small>
    </div>
  ))
}